@model List<Travel_Blog_App.Models.UserTable>

@{
    ViewBag.Title = "AllUser";
}

<h1 style="color:blueviolet">List of users with Us</h1>
<hr />

<table class="table table-bordered" border="1">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>User Address</th>
        <th>UserName</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Password</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.UserName</td>
            <td>@item.MobileNo</td>
            <td>@item.Email</td>
            <td>@item.Password</td>
            <td>
                <p style="color:orangered"> @Html.ActionLink("Edit", "ViewRec", new { id = item.UserId })</p>
                <p style="color:red"> @Html.ActionLink("X", "Delete", new { id = item.UserId })</p>
            </td>
        </tr>
    }
</table>

