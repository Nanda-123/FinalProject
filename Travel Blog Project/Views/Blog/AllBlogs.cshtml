@model List<Travel_Blog_App.Models.BlogTbl>


@{
    ViewBag.Title = "AllBlogs";
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-bordered table-stripped">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div>
                                <h1> @item.Title </h1>
                                <h3>@item.Messages</h3>
                                <hr />
                                <p>Travel Date</p>

                                @{
                                    var Mach = @item.TravelDate;

                                }
                                <h3>@Mach</h3>
                                <hr />
                                <p>
                                    <img src="@item.Images" style="width:1000px; height:1000px" />
                                </p>
                                <p>
                                    @item.Details

                                </p>
                                <p>
                                    @Html.ActionLink("View More....", "Display", new { id = item.BlogId })
                                </p>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

